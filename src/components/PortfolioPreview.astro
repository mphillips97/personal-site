---
import type { PurposeCard } from '../pages/work.astro';

interface Props {
	purposeCard: PurposeCard;
};

const purposeCard = Astro.props.purposeCard;

const imageSrc = purposeCard?.image.fields?.file?.url;
---

<a class="card" href={`/work/${purposeCard?.title}`}>
	<span class="title">{purposeCard?.title}</span>
	<img src={imageSrc} loading="lazy" decoding="async" />
</a>

<style>
	.card {
		display: grid;
		grid-template: auto 1fr / auto 1fr;
		height: 11rem;
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		overflow: hidden;
		box-shadow: var(--shadow-sm);
		text-decoration: none;
		font-family: var(--font-brand);
		font-size: var(--text-xl);
		font-weight: 500;
		transition: box-shadow var(--theme-transition);
	}

	.card:hover {
		box-shadow: var(--shadow-md);
	}

	.title {
		grid-area: 1 / 1 / 2 / 2;
		z-index: 1;
		margin: 0.5rem;
		padding: 0.5rem 1rem;
		color: var(--gray-800);
	}

	img {
		grid-area: 1 / 1 / 3 / 3;
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	@media (min-width: 50em) {
		.card {
			height: 22rem;
		}
	}
</style>
